# USAGE: ./BDTWEKA [TRAINING FILE] [TEST FILE]

export CLASSPATH=/opt/shared/weka/weka-3-6-10/weka.jar:$CLASSPATH
export WEKADATA=/opt/shared/weka/weka-3-6-10/data

#java weka.classifiers.meta.AdaBoostM1 -W weka.classifiers.trees.DecisionStump -t $1 -T $2

java weka.classifiers.meta.AdaBoostM1 -W -asdf weka.classifiers.trees.DecisionStump -t $1 -T $2
